<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFE0E0">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cross"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:onClick="cross">
    </ImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="-40dp"
        android:orientation="horizontal"
        android:paddingTop="40dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp"

            android:backgroundTint="#44EF59"
            android:rotation="180"
            android:layout_gravity=""
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Player 4"
                    android:maxLength="8"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:textSize="25dp">
                </TextView>

                <TextView
                    android:id="@+id/s4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="40dp">
                </TextView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_4"
                    android:layout_width="80dp"
                    android:layout_height="46dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="Roll"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#679BFA"
            android:rotation="180"
            android:layout_gravity=""
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p2"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Player 2"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:maxLength="8">
                </TextView>

                <TextView
                    android:id="@+id/s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="40dp">
                </TextView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_2"
                    android:layout_width="80dp"
                    android:layout_height="46dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="Roll"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/six"
        android:layout_gravity="center">
    </ImageView>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:paddingTop="40dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#FD1435"
            android:layout_gravity=""
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p1"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Player 1"
                    android:maxLength="8"
                    android:textColor="@color/white"
                    android:textSize="25dp">
                </TextView>

                <TextView
                    android:id="@+id/s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="40dp">
                </TextView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_1"
                    android:layout_width="80dp"
                    android:layout_height="46dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="Roll "
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#F6F139"
            android:layout_gravity=""
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLength="8"
                    android:text="Player 3"
                    android:textColor="@color/white"
                    android:textSize="25dp"></TextView>

                <TextView
                    android:id="@+id/s3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="40dp">

                </TextView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_3"
                    android:layout_width="80dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="Roll "
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:id="@+id/quit_card"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardElevation="190dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_marginTop="-500dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cross"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:onClick="no_quit">

            </ImageView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you wanna quit?"
                android:textSize="30dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:layout_marginTop="2dp">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="sans-serif-black"
                android:text="Yup"
                android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="quit"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.771" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>